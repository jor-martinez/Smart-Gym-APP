<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:background="@color/verdematerial"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/error"
            android:tint="@color/verdeTextmaterial"
            app:srcCompat="@mipmap/done_icon" />

        <TextView
            android:id="@+id/title_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_vertical"
            android:layout_marginStart="16dp"
            android:text="@string/enviado"
            android:textColor="@color/verdeTextmaterial"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/mensaje_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/error"
        android:textColor="@color/colorSecundary"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/neutral_btn_confim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/cancelar"
        android:textColor="@color/verdeTextmaterial"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/positive_btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="end"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/ok"
        android:textColor="@color/verdeTextmaterial"
        android:textSize="16sp" />

</RelativeLayout>